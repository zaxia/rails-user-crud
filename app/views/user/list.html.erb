<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Utilisateurs</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <%= render template: "layouts/styles" %>
    </head>
    <body>
        <%= render template: "layouts/header" %>
        <div id="app" class="container">
            <h2>Utilisateurs</h2>
            <span>Liste des utilisateurs</span>
            <hr>
            <div class="row">
                <div class="col-md-2">
                    <a class="button_link" href="/user/add" ><button class="btn btn-primary btn-block">Ajouter</button></a>
                </div>
            </div>
            <table class="table table-bordered table-sm">
                <thead class="thead-dark">
                <tr>
                    <th>Identifiant</th>
                    <th>Nom complet</th>
                    <th>Date de création</th>
                    <th>Date de dernière modification</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                  <tr>
                      <td width="80"><%= user.login %></td>
                      <td><%= user.firstname %> <%= user.lastname %></td>
                      <td><%= user.createdAt %></td>
                      <td><%= user.updatedAt %></td>
                      <td width="170">
                          <a class="button_link" href="/user/edit?login=<%= user.login %>" ><button class="btn btn-info btn-sm">Modifier</button></a>
                          <a class="button_link" href="/user/edit?login=<%= user.login %>" ><button class="btn btn-danger btn-sm">Supprimer</button></a>
                      </td>
                  </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    <%= render template: "layouts/footer" %>